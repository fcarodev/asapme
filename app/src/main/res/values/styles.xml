<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- bottom sheet style-->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>





    <!-- Material normal button style -->
    <style name="normalMaterialButton">
        <item name="android:textColor">#ffffff</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@color/colorButtonPrimary</item>
        <item name="android:elevation">0dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="fontFamily">@font/dmsans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="textTitleActivity">
        <item name="android:textColor">@color/colorTextBlackTitle</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="textLink" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorTextLink</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">#33003cbf</item>

    </style>


    <style name="normalMaterialButtonArrow">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="backgroundTint">#fff</item>
        <item name="cornerRadius">32dp</item>
        <item name="iconTint">#000</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">#979797</item>
        <item name="iconGravity">textStart</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="icon">@drawable/ic_arrow_back</item>
    </style>
    <style name="materialCircleButtonEdit">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="backgroundTint">#fff</item>
        <item name="cornerRadius">32dp</item>
        <item name="iconTint">@color/colorTextLink</item>
        <item name="icon">@drawable/ic_edit_outline</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">#979797</item>
        <item name="iconGravity">textStart</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="editTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeColor">@color/colorTextEditText</item>
        <item name="hintTextColor">@color/colorTextEditText</item>
    </style>

    <style name="editTextInput">
        <item name="fontFamily">@font/dmsans_medium</item>
        <item name="android:textColor">@color/colorTextEditText</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>



    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorTextHint</item>
        <item name="android:textColorSecondary">#003cbf</item>
    </style>
</resources>